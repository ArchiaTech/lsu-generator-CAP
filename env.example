# ===========================================
# Configuration Base de Données
# ===========================================
POSTGRES_DB=lsu_db
POSTGRES_USER=lsu_user
POSTGRES_PASSWORD=lsu_password
DATABASE_URL=postgresql://lsu_user:lsu_password@localhost:5432/lsu_db

# ===========================================
# Configuration Sécurité
# ===========================================
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# Configuration IA (Optionnel)
# ===========================================
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
AI_MODEL=gpt-4
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# ===========================================
# Configuration Email (Optionnel)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@lsu-system.com

# ===========================================
# Configuration Frontend
# ===========================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENV=development
REACT_APP_VERSION=1.0.0

# ===========================================
# Configuration Production
# ===========================================
ENVIRONMENT=development
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===========================================
# Configuration SSL/HTTPS (Production)
# ===========================================
DOMAIN_NAME=your-domain.com
CERTBOT_EMAIL=admin@your-domain.com

# ===========================================
# Configuration Redis (Optionnel)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# Configuration Logs
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=logs/lsu-system.log

# ===========================================
# Configuration Backup
# ===========================================
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups 